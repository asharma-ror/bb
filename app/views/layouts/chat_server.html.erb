<!DOCTYPE html>
<html>
<head>
  <title><%= "#{@project.name} - " if @project %><%= "BatBugger" %></title>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag "//ajax.googleapis.com/ajax/libs/jqueryui/1/themes/smoothness/jquery-ui.css" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "auction_admin_application", :media => "all" %>
  <%= stylesheet_link_tag :project_task %>
  <%= javascript_include_tag :project_task %>
  <%= javascript_include_tag :batbugger_chat %>
  <script type="text/javascript">
    I18n.defaultLocale = "<%= I18n.default_locale %>";
    I18n.locale = "<%= I18n.locale %>";
    I18n.fallbacks = true;
  </script>
</head>
<body>
  <%= render :partial => "layouts/header" %>
  <div id="content">
      <div id="content-header" class="content-header-override">
      </div>
      
      <div id="title_bar">
        <%= yield :title_bar %>
      </div>
      <div id="main">
        <%= show_messages %>

        <%= yield %>
      </div>
    </div>
    <!-- UserVoice JavaScript SDK (only needed once on a page) -->
<script>(function(){var uv=document.createElement('script');uv.type='text/javascript';uv.async=true;uv.src='//widget.uservoice.com/Cqv7xzmXiJ7Ud3e7cXlZZw.js';var s=document.getElementsByTagName('script')[0];s.parentNode.insertBefore(uv,s)})()</script>

<!-- A tab to launch the Classic Widget -->
<script>
UserVoice = window.UserVoice || [];
UserVoice.push(['showTab', 'classic_widget', {
  mode: 'feedback',
  primary_color: '#cc6d00',
  link_color: '#007dbf',
  forum_id: 223672,
  tab_label: 'Feedback',
  tab_color: '#cc6d00',
  tab_position: 'bottom-left',
  tab_inverted: false
}]);
</script>
</body>
</html>

