<% if resource.errors.any? %>
  <%= error_message(resource.errors.full_messages, 'alert-error')%>
<% end %>
<div class="widget-box">
  <div class="widget-title">
    <span class="icon">
      <i class="icon-pencil"></i>
    </span>
    <h5>Change Password</h5>
  </div>
  <div class="widget-content">
    <div class="row">
      <div class="span2"></div>
      <div class="span8">
        <div class="row">&nbsp;</div>
        <%= form_for(resource, :as => resource_name, :url => change_password_auction_admin_profile_path, 
          :html => { :method => :put, :id => 'change_password_auction_admin' }
          ) do |f| %>

          <div class="row">
            <div class="span4">
              <%= f.label :current_password, :class=>"control-label" %>
            </div>
            <div class="span4">
              <%= f.password_field :current_password, :style => "border: solid 1px red" %>
            </div>
          </div>
          <div class="row">
            <div class="span4">
              <%= f.label :password, :class=>"control-label" %>
            </div>
            <div class="span4">
              <%= f.password_field :password, :style => "border: solid 1px red"  %>
            </div>
          </div>
          <div class="row">
            <div class="span4">
              <%= f.label :password_confirmation, :class=>"control-label" %>
            </div>
            <div class="span4">
              <%= f.password_field :password_confirmation, :style => "border: solid 1px red"  %>
            </div>
          </div>
          <div class="row">
            <div class="span3"></div>
            <div class="span4 offset1">
              <%= submit_tag "Update Password", :class =>"btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="span2"></div>
    </div>
  </div>
</div>
