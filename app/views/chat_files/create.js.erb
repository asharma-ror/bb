<% unless @error.present? %>
  var sent_file = Juvia.username + " sent a file, "+ "<%= escape_javascript(link_to "click to download", @chat_file.filepicker_url, :target => "_blank") %>"
  Juvia.sendFile(sent_file);
  $('#error').html("");
  $('#chat_file_filepicker_url').val("");
<% else %>
  $('#error').html("<%=@error%>");
<% end %>
