<% if @notice.blank? %>
	$("#campfire_area").html("<div class='alert alert-success alert-block'><a class='close' data-dismiss='alert' href='#'>×</a><h4 class='alert-heading'>Success!</h4>Authentication is been successful.</div><div id='campfire_detail'><div>Subdomain : <%= @project.campfire_subdomain %></div><div>Campfire room url: <a target='blank' href='https://<%= @project.campfire_subdomain %>.campfirenow.com/room/<%= @project.campfire_room_id %>'>Click here</a></div><div>Token : <%= @project.campfire_token %></div><div>Room name : <%= @project.campfire_room %></div><div style='clear:both;'>&nbsp</div><a class='btn' rel='nofollow' data-remote='true' data-method='delete' href='/projects/5/campfire_delete'>Delete settings</a><a class='btn' style='margin-left:20px;' data-remote='true' data-method='get' href='/projects/5/campfire_detail'>Edit settings</a></div>")
