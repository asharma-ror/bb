<div id= "project_results">
  <% if @project_invitations.present? %>
    <%= render :partial => "project_invitation"%>
  <% end %>
  <div class="row-fluid">
    <div class="span12">
      <div class="widget-box">
        <div class="widget-title">
          <span class="icon">
            <i class="icon-th"></i>
          </span>
          <h5>Projects</h5>
        </div>
        <div class="widget-content nopadding">
          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th></th>
                <th>Project name</th>
                <th>Key</th>
                <th>Open</th>
                <th>Total</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <% @projects.each_with_index do |project, index| %>
              <tbody>
                <tr>
                  <td align="center" valign="middle" width="1%">
                     <%= index + 1%>
                  </td>
                  <td align="center" valign="middle" width="10%">
                    <%= link_to exception_path(project) do %>
                      <span data-original-title="see exceptions" class="tip-top">
                      <%= project.name %>
                      </span>
                    <%end %>
                  </td>
                  <td width="10%"><b><%= project.key %></b></td>
                  <td width="1%"><b><%= project.project_errors.active.size %></b></td>
                  <td width="1%"><b><%= project.project_errors.size %></b></td>
                  <td width="10%">

                    <%= link_to settings_project_path(project) do %>
                      <button class="btn btn-mini"><i class="icon-wrench"></i> Settings</button>
                    <% end %>
                  </td>
                  <td width="10%">
                    <%= link_to project_path(project) do %>
                      <button class="btn btn-primary btn-mini"><i class="icon-eye-open"></i> Ticket-Tracker</button>
                    <% end %>
                  </td>
                  <td width="10%">
                    <%= link_to exception_path(project) do %>
                      <button class="btn btn-danger btn-mini">Exceptions</button>
                    <% end %>
                  </td>
                  <td align="center" valign="middle" width="10%" >
                    <%= link_to project_camp_project_path(project) do %>
                      <button class="btn btn-success btn-mini">Project-Chat</button>
                    <% end %>
                  </td>
                  <td align="center" valign="middle" width="10%">
                    <%= render :partial => "project_subscription", :locals=> {:project=> project} if current_user.is_project_admin?(project)%>
                  </td>
                </tr>
              </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
