                        <input id="modal_submit" class="btn btn-primary btn" name="commit" type="submit" value="Save" onclick="$('#spinner').show();$(this).attr('disabled', 'disabled');">
                        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                      </div>
                    </form>
